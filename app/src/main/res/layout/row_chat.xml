<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/layoutJikaDokter"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:rotation="120"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_point"
            app:tint="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="14dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/shape_main"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtIsiChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:text="Nama Pengirim jika text panjang sangat apa yang aka terjadi bagu, ini sudah sesuai harapan" />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutJikaPasien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="50dp"
            android:rotation="240"
            android:layout_alignParentRight="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_point"
            app:tint="@color/secondaryLightColor" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/secondaryLightColor"
            android:layout_marginRight="20dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/shape_main"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtIsiChatD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins"
                android:textColor="@color/black"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:text="Nama Pengirim" />

        </LinearLayout>
    </RelativeLayout>


</LinearLayout>